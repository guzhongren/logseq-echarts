{
  "logseq": {
    "id": "logseq-echarts",
    "title": "logseq-echarts",
    "icon": "./icon.svg"
  },
  "name": "logseq-echarts",
  "version": "1.1.0",
  "description": "A plugin of logseq which integrates with [ECharts](https://echarts.apache.org/)",
  "main": "dist/index.html",
  "targets": {
    "main": false
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "parcel build --no-source-maps src/index.html --public-url ./",
    "dev": "parcel watch src/index.html --public-url ./",
    "fix": "prettier -w . && eslint src/**/*.ts --fix",
    "lint": "prettier -c . && eslint src/**/*.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*{.ts,.tsx,.html}": [
      "lint"
    ],
    "./*{.md,.yaml,.json}": [
      "prettier -c"
    ]
  },
  "keywords": [],
  "author": "guzhongren",
  "license": "MIT",
  "dependencies": {
    "@logseq/libs": "^0.0.10",
    "echarts": "^5.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "buffer": "6.0.3",
    "eslint": "8.25.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "parcel": "2.7.0",
    "prettier": "2.7.1",
    "typescript": "4.8.4"
  }
}
